# Application
APP_NAME=MemoryVault
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/memvault
DB_ECHO=False
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=True
CORS_METHODS=*
CORS_HEADERS=*

# Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# OpenAI
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
WHISPER_MODEL=whisper-1

# ElevenLabs
ELEVENLABS_API_KEY=your-elevenlabs-key-here

# Pinata IPFS
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_KEY=your-pinata-secret-key
PINATA_JWT=your-pinata-jwt

# Email (SendGrid/Mailgun/AWS SES)
EMAIL_ENABLED=False
EMAIL_FROM=noreply@memvault.com
EMAIL_FROM_NAME=MemoryVault
SENDGRID_API_KEY=

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# File Storage
MAX_UPLOAD_SIZE=524288000
TEMP_STORAGE_PATH=/tmp/memvault
ALLOWED_AUDIO_FORMATS=mp3,wav,m4a,ogg,flac

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Sentry (Error Tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
